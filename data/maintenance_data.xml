<odoo>
    <data noupdate="1">
        <!-- Sequence for Truck Maintenance Requests -->
        <record id="seq_truck_maintenance_request" model="ir.sequence">
            <field name="name">Truck Maintenance Request</field>
            <field name="code">truck.maintenance.request</field>
            <field name="prefix">TMR</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Default Maintenance Teams -->
        <record id="maintenance_team_general" model="truck.maintenance.team">
            <field name="name">General Maintenance</field>
            <field name="color">1</field>
        </record>

        <record id="maintenance_team_engine" model="truck.maintenance.team">
            <field name="name">Engine Specialists</field>
            <field name="color">3</field>
        </record>

        <record id="maintenance_team_electrical" model="truck.maintenance.team">
            <field name="name">Electrical Team</field>
            <field name="color">5</field>
        </record>

        <record id="maintenance_team_body" model="truck.maintenance.team">
            <field name="name">Body Work Team</field>
            <field name="color">7</field>
        </record>
    </data>
</odoo>