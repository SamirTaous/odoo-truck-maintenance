<odoo>
    <!-- Fleet Dashboard Action - Show All Trucks with Summary -->
    <record id="action_truck_fleet_dashboard" model="ir.actions.act_window">
        <field name="name">Fleet Dashboard</field>
        <field name="res_model">truck.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{
            'search_default_group_ownership': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to your Fleet Dashboard!
            </p>
            <p>
                This dashboard shows an overview of your entire truck fleet organized by ownership type.
                Use the filters to view specific categories of trucks.
            </p>
        </field>
    </record>

    <!-- Dashboard Menu -->
    <menuitem
        id="menu_truck_dashboard"
        name="ðŸ“Š Fleet Dashboard"
        parent="menu_truck_fleet"
        action="action_truck_fleet_dashboard"
        sequence="5"/>

</odoo>