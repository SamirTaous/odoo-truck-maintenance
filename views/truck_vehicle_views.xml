<odoo>
    <!-- FORM VIEW (Truck-focused) -->
    <record id="view_truck_vehicle_form" model="ir.ui.view">
        <field name="name">truck.vehicle.form</field>
        <field name="model">truck.vehicle</field>
        <field name="arch" type="xml">
            <form string="Truck Vehicle">
                <header>
                    <field name="is_available" invisible="1"/>
                    <button name="action_confirm_truck" string="Confirm Truck" type="object" class="oe_highlight" attrs="{'invisible': [('active', '=', True)]}"/>
                    <button string="Save &amp; Close" special="save" class="btn-primary"/>
                    <button string="Discard" special="cancel"/>
                    <div class="alert alert-warning" role="alert" attrs="{'invisible': [('is_available', '=', True)]}">
                        <strong>Warning:</strong> This truck is currently not available.
                    </div>
                    <div class="alert alert-info" role="alert" attrs="{'invisible': ['|', ('ownership_type', '!=', 'rented'), '&amp;', ('rental_start_date', '!=', False), ('rental_end_date', '!=', False)]}">
                        <strong>Info:</strong> Please set rental start and end dates for rented trucks.
                    </div>
                </header>
                <sheet>
                    <!-- Smart Buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_maintenance" icon="fa-wrench">
                            <field string="Maintenance" name="maintenance_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_schedule_maintenance" icon="fa-calendar">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Schedule</span>
                                <span class="o_stat_text">Maintenance</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_update_odometer" icon="fa-tachometer">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="odometer"/> km</span>
                                <span class="o_stat_text">Odometer</span>
                            </div>
                        </button>
                    </div>

                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" readonly="1"/></h1>
                        <div class="o_row">
                            <field name="brand" placeholder="Select Brand" required="1"/>
                            <field name="model_name" placeholder="Model Name" required="1"/>
                        </div>
                        <field name="license_plate" placeholder="License Plate Number" required="1"/>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="truck_type" required="1"/>
                            <field name="year" required="1"/>
                            <field name="vin_number" placeholder="Vehicle Identification Number"/>
                        </group>
                        <group string="Status &amp; Assignment">
                            <field name="active" widget="boolean_toggle"/>
                            <field name="is_available" readonly="1"/>
                            <field name="maintenance_status"/>
                            <field name="driver_id" widget="many2one_avatar" placeholder="Select Driver"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <!-- Ownership Information - Prominent Section -->
                    <group string="ðŸ¢ Ownership Information" class="ownership-section">
                        <group>
                            <field name="ownership_type" required="1" widget="radio" options="{'horizontal': true}"/>
                            <field name="rental_status" readonly="1" attrs="{'invisible': [('ownership_type', '=', 'owned')]}"/>
                        </group>
                        <group attrs="{'invisible': [('ownership_type', '=', 'owned')]}">
                            <div class="alert alert-info rental-info" attrs="{'invisible': [('ownership_type', '!=', 'rented')]}">
                                <strong>Rental Truck:</strong> Please ensure rental dates and costs are properly configured.
                            </div>
                            <div class="alert alert-info rental-info" attrs="{'invisible': [('ownership_type', '!=', 'subcontracted')]}">
                                <strong>Subcontracted Truck:</strong> Please specify the subcontractor company.
                            </div>
                        </group>
                    </group>

                    <notebook>
                        <page string="Cargo Specifications" name="cargo_specs">
                            <group>
                                <group string="Capacity">
                                    <field name="max_payload" string="Maximum Payload (kg)" required="1"/>
                                    <field name="cargo_volume" string="Cargo Volume (mÂ³)" required="1"/>
                                    <field name="gross_vehicle_weight" string="Gross Vehicle Weight (kg)"/>
                                </group>
                                <group string="Cargo Dimensions (meters)">
                                    <field name="cargo_length" string="Length (m)"/>
                                    <field name="cargo_width" string="Width (m)"/>
                                    <field name="cargo_height" string="Height (m)"/>
                                </group>
                            </group>
                            <group>
                                <group string="Overall Truck Dimensions (meters)">
                                    <field name="overall_length" string="Total Length (m)"/>
                                    <field name="overall_width" string="Total Width (m)"/>
                                    <field name="overall_height" string="Total Height (m)"/>
                                </group>
                                <group string="Special Equipment">
                                    <field name="has_crane" string="Equipped with Crane"/>
                                    <field name="has_tailgate" string="Has Tailgate Lift"/>
                                    <field name="has_refrigeration" string="Refrigerated Unit"/>
                                    <field name="has_gps" string="GPS Tracking System"/>
                                </group>
                            </group>
                            <group string="Additional Equipment &amp; Notes">
                                <field name="special_equipment" nolabel="1" placeholder="Describe any special equipment, modifications, or additional notes about this truck..."/>
                            </group>
                        </page>

                        <page string="Engine &amp; Performance" name="engine">
                            <group>
                                <group string="Engine Specifications">
                                    <field name="engine_power" string="Engine Power (HP)"/>
                                    <field name="fuel_type" string="Fuel Type"/>
                                    <field name="fuel_capacity" string="Fuel Tank Capacity (Liters)"/>
                                    <field name="fuel_consumption" string="Fuel Consumption (L/100km)"/>
                                </group>
                            </group>
                        </page>

                        <page string="Maintenance" name="maintenance">
                            <group>
                                <group string="Maintenance Schedule">
                                    <field name="last_maintenance_date" readonly="1"/>
                                    <field name="next_maintenance_due"/>
                                    <field name="service_interval_km"/>
                                    <field name="km_until_service" readonly="1"/>
                                </group>
                                <group string="Odometer">
                                    <field name="odometer"/>
                                    <field name="last_service_odometer"/>
                                </group>
                            </group>
                        </page>

                        <page string="Ownership &amp; Rental" name="ownership" attrs="{'invisible': [('ownership_type', '=', 'owned')]}">
                            <group attrs="{'invisible': [('ownership_type', '!=', 'rented')]}">
                                <group string="Rental Information">
                                    <field name="rental_start_date" attrs="{'required': [('ownership_type', '=', 'rented')]}"/>
                                    <field name="rental_end_date" attrs="{'required': [('ownership_type', '=', 'rented')]}"/>
                                    <field name="rental_cost_per_day" string="Daily Rental Cost"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                                <group string="Rental Summary">
                                    <field name="rental_status" readonly="1"/>
                                </group>
                            </group>
                            <group attrs="{'invisible': [('ownership_type', '!=', 'subcontracted')]}">
                                <group string="Subcontractor Information">
                                    <field name="subcontractor_id" string="Subcontractor Company" attrs="{'required': [('ownership_type', '=', 'subcontracted')]}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Compliance &amp; Documentation" name="compliance">
                            <group>
                                <group string="Important Expiry Dates">
                                    <field name="registration_expiry" string="Registration Expires"/>
                                    <field name="insurance_expiry" string="Insurance Expires"/>
                                    <field name="inspection_due" string="Next Technical Inspection"/>
                                </group>
                                <group string="Financial Information">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="purchase_price" string="Purchase Price" attrs="{'invisible': [('ownership_type', '!=', 'owned')]}"/>
                                    <field name="current_value" string="Current Estimated Value"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View (Truck-focused) -->
    <record id="view_truck_vehicle_kanban" model="ir.ui.view">
        <field name="name">truck.vehicle.kanban</field>
        <field name="model">truck.vehicle</field>
        <field name="arch" type="xml">
            <kanban class="o_truck_maintenance">
                <field name="name"/>
                <field name="image"/>
                <field name="license_plate"/>
                <field name="driver_id"/>
                <field name="brand"/>
                <field name="model_name"/>
                <field name="truck_type"/>
                <field name="ownership_type"/>
                <field name="is_available"/>
                <field name="max_payload"/>
                <field name="cargo_volume"/>
                <field name="maintenance_status"/>
                <field name="rental_status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click tm-kanban-card truck-#{record.ownership_type.raw_value}">
                            <div class="o_kanban_image">
                                <field name="image" widget="image" class="oe_avatar"/>
                                <div class="o_kanban_image_fill_top" t-if="!record.is_available.raw_value" style="background-color: rgba(255,0,0,0.1);">
                                    <i class="fa fa-exclamation-triangle text-danger" title="Not Available"/>
                                </div>
                                <div class="o_kanban_image_fill_top" t-if="record.maintenance_status.raw_value == 'critical'" style="background-color: rgba(255,0,0,0.2);">
                                    <i class="fa fa-wrench text-danger" title="Critical Maintenance"/>
                                </div>
                            </div>
                            <div class="tm_kanban_body">
                                <strong><field name="name"/></strong>
                                <div class="text-muted"><field name="license_plate"/></div>
                                <div class="text-muted small">
                                    <field name="brand"/> <field name="model_name"/>
                                </div>
                                
                                <!-- Ownership Type Badge -->
                                <div t-attf-class="ownership-badge #{record.ownership_type.raw_value}">
                                    <i t-if="record.ownership_type.raw_value == 'owned'" t-attf-class="fa fa-building ownership-icon #{record.ownership_type.raw_value}"/>
                                    <i t-if="record.ownership_type.raw_value == 'rented'" t-attf-class="fa fa-calendar ownership-icon #{record.ownership_type.raw_value}"/>
                                    <i t-if="record.ownership_type.raw_value == 'subcontracted'" t-attf-class="fa fa-handshake-o ownership-icon #{record.ownership_type.raw_value}"/>
                                    <span t-if="record.ownership_type.raw_value == 'owned'">Company Owned</span>
                                    <span t-if="record.ownership_type.raw_value == 'rented'">Rented</span>
                                    <span t-if="record.ownership_type.raw_value == 'subcontracted'">Subcontracted</span>
                                </div>
                                
                                <hr class="mt-2 mb-2"/>
                                
                                <div class="tm_kanban_row">
                                    <i class="fa fa-truck"/>
                                    <span><field name="truck_type"/></span>
                                </div>
                                
                                <div class="tm_kanban_row">
                                    <i class="fa fa-weight"/>
                                    <span><field name="max_payload"/> kg</span>
                                </div>
                                
                                <div class="tm_kanban_row">
                                    <i class="fa fa-cube"/>
                                    <span><field name="cargo_volume"/> mÂ³</span>
                                </div>
                                
                                <div class="tm_kanban_row">
                                    <i class="fa fa-wrench"/>
                                    <span t-if="record.maintenance_status.raw_value == 'good'" class="text-success">Good</span>
                                    <span t-if="record.maintenance_status.raw_value == 'needs_attention'" class="text-warning">Needs Attention</span>
                                    <span t-if="record.maintenance_status.raw_value == 'critical'" class="text-danger">Critical</span>
                                </div>
                                
                                <!-- Additional info for rented trucks -->
                                <div t-if="record.ownership_type.raw_value == 'rented'" class="tm_kanban_row">
                                    <i class="fa fa-info-circle"/>
                                    <span class="small text-muted"><field name="rental_status"/></span>
                                </div>
                                
                                <div t-if="record.driver_id.value">
                                    <hr class="mt-2 mb-2"/>
                                    <div class="tm_kanban_row">
                                        <i class="fa fa-user"/>
                                        <span><field name="driver_id"/></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_truck_vehicle_tree" model="ir.ui.view">
        <field name="name">truck.vehicle.tree</field>
        <field name="model">truck.vehicle</field>
        <field name="arch" type="xml">
            <tree decoration-muted="not active" decoration-danger="maintenance_status == 'critical'" js_class="truck_ownership_tree">
                <field name="image" widget="image" class="oe_avatar"/>
                <field name="name"/>
                <field name="license_plate"/>
                <field name="brand"/>
                <field name="model_name"/>
                <field name="truck_type"/>
                <field name="ownership_type" widget="badge" decoration-info="ownership_type == 'owned'" decoration-warning="ownership_type == 'rented'" decoration-success="ownership_type == 'subcontracted'"/>
                <field name="max_payload" string="Payload (kg)"/>
                <field name="cargo_volume" string="Volume (mÂ³)"/>
                <field name="maintenance_status" widget="badge" decoration-success="maintenance_status == 'good'" decoration-warning="maintenance_status == 'needs_attention'" decoration-danger="maintenance_status == 'critical'"/>
                <field name="driver_id" widget="many2one_avatar"/>
                <field name="is_available" widget="boolean_toggle"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="rental_status" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="action_truck_vehicle" model="ir.actions.act_window">
        <field name="name">Truck Fleet</field>
        <field name="res_model">truck.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first truck!
            </p>
            <p>
                Add trucks to your fleet with detailed specifications including cargo capacity,
                dimensions, maintenance tracking, and ownership information.
            </p>
        </field>
    </record>

    <!-- Company Owned Trucks -->
    <record id="action_truck_vehicle_owned" model="ir.actions.act_window">
        <field name="name">Company Trucks</field>
        <field name="res_model">truck.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('ownership_type', '=', 'owned')]</field>
        <field name="context">{'default_ownership_type': 'owned'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No company-owned trucks yet!
            </p>
            <p>
                Add your company-owned trucks to the fleet. These are trucks that your company owns outright.
            </p>
        </field>
    </record>

    <!-- Rented Trucks -->
    <record id="action_truck_vehicle_rented" model="ir.actions.act_window">
        <field name="name">Rented Trucks</field>
        <field name="res_model">truck.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('ownership_type', '=', 'rented')]</field>
        <field name="context">{'default_ownership_type': 'rented'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No rented trucks yet!
            </p>
            <p>
                Add rented trucks to track rental periods, costs, and maintenance responsibilities.
            </p>
        </field>
    </record>

    <!-- Subcontracted Trucks -->
    <record id="action_truck_vehicle_subcontracted" model="ir.actions.act_window">
        <field name="name">Subcontracted Trucks</field>
        <field name="res_model">truck.vehicle</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('ownership_type', '=', 'subcontracted')]</field>
        <field name="context">{'default_ownership_type': 'subcontracted'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No subcontracted trucks yet!
            </p>
            <p>
                Add trucks from subcontractors to track their vehicles and maintenance status.
            </p>
        </field>
    </record>

    <!-- Search View for better filtering -->
    <record id="view_truck_vehicle_search" model="ir.ui.view">
        <field name="name">truck.vehicle.search</field>
        <field name="model">truck.vehicle</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="license_plate"/>
                <field name="brand"/>
                <field name="model_name"/>
                <field name="driver_id"/>
                <field name="subcontractor_id"/>
                <separator/>
                <filter string="Available" name="available" domain="[('is_available', '=', True)]"/>
                <filter string="Not Available" name="not_available" domain="[('is_available', '=', False)]"/>
                <separator/>
                <filter string="Good Condition" name="good_condition" domain="[('maintenance_status', '=', 'good')]"/>
                <filter string="Needs Attention" name="needs_attention" domain="[('maintenance_status', '=', 'needs_attention')]"/>
                <filter string="Critical" name="critical" domain="[('maintenance_status', '=', 'critical')]"/>
                <separator/>
                <filter string="ðŸ¢ Company Owned" name="owned" domain="[('ownership_type', '=', 'owned')]"/>
                <filter string="ðŸ“… Rented Trucks" name="rented" domain="[('ownership_type', '=', 'rented')]"/>
                <filter string="ðŸ¤ Subcontracted" name="subcontracted" domain="[('ownership_type', '=', 'subcontracted')]"/>
                <separator/>
                <filter string="Rental Expiring Soon" name="rental_expiring" domain="[('ownership_type', '=', 'rented'), ('rental_end_date', '&lt;=', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>
                <filter string="Active Rentals" name="active_rentals" domain="[('ownership_type', '=', 'rented'), ('rental_start_date', '&lt;=', context_today()), ('rental_end_date', '&gt;=', context_today())]"/>
                <separator/>
                <filter string="Rigid Trucks" name="rigid" domain="[('truck_type', '=', 'rigid')]"/>
                <filter string="Articulated" name="articulated" domain="[('truck_type', '=', 'articulated')]"/>
                <separator/>
                <filter string="With Refrigeration" name="refrigerated" domain="[('has_refrigeration', '=', True)]"/>
                <filter string="With Crane" name="with_crane" domain="[('has_crane', '=', True)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Ownership Type" name="group_ownership" context="{'group_by': 'ownership_type'}"/>
                    <filter string="Brand" name="group_brand" context="{'group_by': 'brand'}"/>
                    <filter string="Truck Type" name="group_truck_type" context="{'group_by': 'truck_type'}"/>
                    <filter string="Maintenance Status" name="group_maintenance" context="{'group_by': 'maintenance_status'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                    <filter string="Subcontractor" name="group_subcontractor" context="{'group_by': 'subcontractor_id'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>