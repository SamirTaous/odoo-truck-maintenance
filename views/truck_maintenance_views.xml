<odoo>
    <!-- Truck Maintenance Request Tree View -->
    <record id="view_truck_maintenance_request_tree" model="ir.ui.view">
        <field name="name">truck.maintenance.request.tree</field>
        <field name="model">truck.maintenance.request</field>
        <field name="arch" type="xml">
            <tree decoration-danger="priority == '4'" decoration-warning="priority == '3'" decoration-info="state == 'in_progress'">
                <field name="name"/>
                <field name="truck_id"/>
                <field name="maintenance_type"/>
                <field name="category"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'in_progress'" decoration-warning="state == 'requested'"/>
                <field name="request_date"/>
                <field name="scheduled_date"/>
                <field name="technician_id"/>
                <field name="estimated_cost" sum="Total Estimated Cost"/>
                <field name="actual_cost" sum="Total Actual Cost"/>
            </tree>
        </field>
    </record>

    <!-- Truck Maintenance Request Form View -->
    <record id="view_truck_maintenance_request_form" model="ir.ui.view">
        <field name="name">truck.maintenance.request.form</field>
        <field name="model">truck.maintenance.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_request" string="Request" type="object" states="draft" class="oe_highlight"/>
                    <button name="action_start" string="Start Work" type="object" states="requested" class="oe_highlight"/>
                    <button name="action_done" string="Mark as Done" type="object" states="in_progress" class="oe_highlight"/>
                    <button name="action_cancel" string="Cancel" type="object" states="draft,requested,in_progress"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object" states="cancelled"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Maintenance Request Subject"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="truck_id" options="{'no_create': True}"/>
                            <field name="maintenance_type"/>
                            <field name="category"/>
                            <field name="priority" widget="priority"/>
                            <field name="request_date"/>
                            <field name="odometer_reading"/>
                        </group>
                        <group>
                            <field name="maintenance_team_id"/>
                            <field name="technician_id"/>
                            <field name="scheduled_date"/>
                            <field name="completion_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Describe the maintenance issue or work needed..."/>
                        </page>
                        <page string="Parts &amp; Labor">
                            <group>
                                <group>
                                    <field name="parts_needed" placeholder="List parts needed for this maintenance..."/>
                                </group>
                                <group>
                                    <field name="labor_hours"/>
                                    <field name="estimated_cost"/>
                                    <field name="actual_cost"/>
                                </group>
                            </group>
                        </page>
                        <page string="Work Performed">
                            <field name="work_performed" placeholder="Describe the work that was performed..."/>
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Truck Maintenance Request Kanban View -->
    <record id="view_truck_maintenance_request_kanban" model="ir.ui.view">
        <field name="name">truck.maintenance.request.kanban</field>
        <field name="model">truck.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="truck_id"/>
                <field name="maintenance_type"/>
                <field name="priority"/>
                <field name="state"/>
                <field name="technician_id"/>
                <field name="scheduled_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-truck"/> <field name="truck_id"/>
                                </div>
                                <div>
                                    <span class="badge badge-pill badge-info">
                                        <field name="maintenance_type"/>
                                    </span>
                                </div>
                                <div t-if="record.scheduled_date.raw_value">
                                    <i class="fa fa-calendar"/> <field name="scheduled_date"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="technician_id" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Truck Maintenance Request Calendar View -->
    <record id="view_truck_maintenance_request_calendar" model="ir.ui.view">
        <field name="name">truck.maintenance.request.calendar</field>
        <field name="model">truck.maintenance.request</field>
        <field name="arch" type="xml">
            <calendar string="Truck Maintenance Schedule" date_start="scheduled_date" color="priority" quick_add="False">
                <field name="name"/>
                <field name="truck_id"/>
                <field name="maintenance_type"/>
                <field name="technician_id"/>
            </calendar>
        </field>
    </record>

    <!-- Truck Maintenance Team Tree View -->
    <record id="view_truck_maintenance_team_tree" model="ir.ui.view">
        <field name="name">truck.maintenance.team.tree</field>
        <field name="model">truck.maintenance.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="leader_id"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Truck Maintenance Team Form View -->
    <record id="view_truck_maintenance_team_form" model="ir.ui.view">
        <field name="name">truck.maintenance.team.form</field>
        <field name="model">truck.maintenance.team</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Team Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="leader_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="color" widget="color"/>
                        </group>
                    </group>
                    <group string="Team Members">
                        <field name="member_ids" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>